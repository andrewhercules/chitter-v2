<header>

	<% if current_user %>

		<section id='header'>
			<h1>Chitter</h1>
			<a href='/'><img src='/images/small-icon.png' id='header-icon' alt='Small icon of bird'></a>
		</section>


		<section id="new-peep">
				<form action="/peeps" method="post">
				<p class='form'>Post a new peep! (Max 150 characters)</p><br /><br /><input type="text" name="message" placeholder='Your message goes here'>
				<input type="submit" value="Post">
				</form>
		</section>


	<% else %>

		<section id='header'>
			<h1>Chitter</h1>
			<a href='/'><img src='/images/small-icon.png' id='header-icon' alt='Small icon of bird'></a>
			<a href='#' id='sign-in-button'>Sign in</a>
		</section>

		<section id='sign-in-box'>
			<form method='post' action='/sessions' id='sign-in-form'><h2>Sign in here</h2><br />
				<p class='form'>Username</p> <input type='text' name='username' placeholder='Username'>
				<p class='form'>Password &nbsp;&nbsp;(<a href='#' id="forgot-password-button">Forgot your password?</a>)</p> 
				<input type="password" name="password" placeholder='Password'>
				<input type="submit" value="Sign in"> 
			</form>
		</section>

	<% end %>

</header>